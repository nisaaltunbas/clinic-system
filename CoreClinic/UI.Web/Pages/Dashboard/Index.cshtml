@page
@model UI.Web.Pages.Dashboard.IndexModel
@{
}

<h1>Dashboard</h1>

<div class="card" style="width:80rem">
    <div class="card-header">
        <h1>Patient Info</h1>
        <a asp-page="create" class="btn btn-outline-dark btn-sm">Create a New Rezervation</a>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover" id="patients">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>DateOfBirth</th>
                    <th>PhoneNumber</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Date</th>
                    <th>Dentist</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model.Patients)
                {

                    <tr>
                        <td>
                            <a asp-page="edit" asp-route-id="@person.Id">
                                @person.Id
                            </a>
                        </td>
                        <td>@person.Firstname</td>
                        <td>@person.Lastname</td>
                        <td>@person.DateOfBirth</td>
                        <td>@person.PhoneNumber</td>
                        <td>@person.Email</td>
                        <td>@person.Address</td>
                        <td>@person.Date</td>
                        <td>@person.DentistName</td>
                    </tr>

                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>DateOfBirth</th>
                    <th>PhoneNumber</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Date</th>
                    <th>Dentist</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script>
    <script>
        new DataTable('#patients');
    </script>
}

@section Styles
{
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css" />
}